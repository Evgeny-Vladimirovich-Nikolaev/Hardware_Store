<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="Create-table-descriptions" author="Evgeny Nikolaev">
        <preConditions>
            <not>
                <tableExists tableName="descriptions"/>
            </not>
        </preConditions>
        <createTable tableName="descriptions">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="description" type="VARCHAR(60)">
                <constraints nullable="false" primaryKey="true"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="init-8" author="Evgeny Nikolaev">
        <insert tableName="descriptions">
            <column name="id" value="1">
            </column>
            <column name="description" value="descriptions1">
            </column>
        </insert>
        <insert tableName="descriptions">
            <column name="id" value="2">
            </column>
            <column name="description" value="descriptions2">
            </column>
        </insert>
        <insert tableName="descriptions">
            <column name="id" value="3">
            </column>
            <column name="description" value="descriptions3">
            </column>
        </insert>

    </changeSet>


</databaseChangeLog>